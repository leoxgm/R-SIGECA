<div class="container text-center">
  <div class="card mx-auto" style="width: 62rem;">
    <div class="card-body">
      {{#if user}}
        <h3 class="card-title">Bienvenido {{user.name}}</h3>
        <h6 class="card-subtitle mb-2 text-muted">Número económico:{{user.num_economic}}</h6>
        <h6 class="card-subtitle mb-2 text-muted">Número telefónico:{{user.telefono}}</h6>
      {{else}}
        <h5 class="card-title">Bienvenido Usuario Desconocido</h5>
        <h6 class="card-subtitle mb-2 text-muted">Número economico desconocido</h6>
      {{/if}}
      <br />
      <img src="/pictures/sigeca_full.png" />
      {{#if preferencias}}
        <h3 class="mt-3">Cuentas con preferencias</h3>
        <a href="/profesores/preferencias" class="btn btn-primary mt-3 g-2">Ver Preferencias</a>
        <a href="/profesores/edit-preferencias" class="btn btn-primary mt-3 g-2">Editar Preferencias</a>
      {{else}}
        <h3 class="mt-3">No cuentas con preferencias</h3>
        <a
          href="/profesores/nueva-preferencia"
          class="btn btn-primary mt-3 g-2 me-3"
        >Agregar Preferencias</a>
      {{/if}}
      <br />
      <div
        id="carouselExampleInterval"
        class="carousel slide mt-3"
        data-bs-ride="carousel"
      >
        <div class="carousel-inner">
          <div class="carousel-item active" data-bs-interval="10000">
            <img
              src="/pictures/lerma_antes.jpg"
              class="d-block w-100"
              alt="Ilustración"
              width="480"
              height="360"
            />
          </div>
          <div class="carousel-item" data-bs-interval="2000">
            <img
              src="/pictures/lerma-ahora.jpg"
              class="d-block w-100"
              alt="Ilustración"
              width="480"
              height="360"
            />
          </div>
          <div class="carousel-item">
            <img
              src="/pictures/velarias.jpg"
              class="d-block w-100"
              alt="Ilustración"
              width="480"
              height="360"
            />
          </div>
        </div>
        <button
          class="carousel-control-prev"
          type="button"
          data-bs-target="#carouselExampleInterval"
          data-bs-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button
          class="carousel-control-next"
          type="button"
          data-bs-target="#carouselExampleInterval"
          data-bs-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
  </div>
</div>