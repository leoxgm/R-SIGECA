<div class="container text-center">
  <div class="card mx-auto mt-4" style="width: 52rem">
    <div class="card-body">
      <h5 class="card-title text-center">Editar Clase</h5>
      <br />
      <img
        src="/pictures/sigeca_full.png"
        class="img-fluid mt-3 mb-3"
        alt="SIGECA"
        width="440"
        height="240"
      />
      {{#with edit}}
      {{#each clase}}
      <form action="/horario/edit-clase/{{id}}?_method=PUT" method="POST">
      {{/each}}
      {{/with}}
        <input type="hidden" name="_method" value="PUT" />
        <div class="mt-2">
          <div class="row">
            <div class="col-md">
              <div class="form-floating mt-3">
                <select
                  class="form-select text-center"
                  id="floatingSelectGridTrim"
                  name="trimestre"
                >
                  {{#with edit}} {{#each clase}}
                  <option value="{{trimestre}}" selected>{{trimestre}}</option>
                  {{/each}} {{/with}} {{#each horarios}}
                  <option value="{{trimestre}}">{{trimestre}}</option>
                  {{/each}}
                </select>
                <label for="floatingSelectGridTrim">Trimestre</label>
              </div>
            </div>
            <div class="col-md">
              <div class="form-floating mt-3">
                <select
                  class="form-select text-center"
                  id="floatingSelectGrid"
                  name="uea"
                >
                  {{#with edit}} {{#each clase}}
                  <option value="{{uea}}" selected>{{uea}}</option>
                  {{/each}} {{/with}} {{#each uea}}
                  <option value="{{uea}}">{{uea}}</option>
                  {{/each}}
                </select>
                <label for="floatingSelectGrid">UEA</label>
              </div>
            </div>
          </div>
          <div class="form-floating mt-3">
            <select
              class="form-select text-center"
              id="floatingSelectGrid2"
              name="profesor"
            >
              {{#with edit}} {{#each clase}}
              <option value="{{profesor}}" selected>{{profesor}}</option>
              {{/each}} {{/with}} {{#each profesores}}
              <option value="{{name}}">{{name}}</option>
              {{/each}}
            </select>
            <label for="floatingSelectGrid2">Profesor</label>
          </div>
          <div class="form-floating mt-3">
            <select
              class="form-select text-center"
              id="floatingSelectGrid2"
              name="grupo"
            >
              {{#with edit}} {{#each clase}}
              <option value="{{grupo}}" selected>{{grupo}}</option>
              {{/each}} {{/with}} {{#each grupos}}
              <option value="{{grupo}}">{{grupo}}</option>
              {{/each}}
            </select>
            <label for="floatingSelectGrid2">Grupo</label>
          </div>
          <div class="row">
            <div class="col-md">
              <div class="form-check mt-3">
                {{#with edit}} {{#each clase}} {{#if lunes}}
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="Lunes"
                  name="lunes"
                  id="flexCheckDefault"
                  checked
                />
                {{else}}
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="Lunes"
                  name="lunes"
                  id="flexCheckDefault"
                />
                {{/if}} {{/each}} {{/with}}
                <label class="form-check-label" for="flexCheckDefault">
                  Lunes
                </label>
                <div class="form-floating mt-3">
                  <select
                    class="form-select text-center"
                    id="floatingSelectGrid3"
                    name="salon_lunes"
                  >
                    <option selected disabled>Selecciona el salón</option>
                    {{#each salones}}
                    <option value="{{salon}}">{{salon}}</option>
                    {{/each}}
                  </select>
                  <label for="floatingSelectGrid3">Salón</label>
                </div>
                <div class="row">
                  <div class="col-md">
                    <div class="form-floating mt-3">
                      <input
                        type="time"
                        class="form-control"
                        id="floatingTime"
                        placeholder="Horario de inicio"
                        name="horario_inicio_lunes"
                      />
                      <label for="floatingTime">Inicio</label>
                    </div>
                  </div>
                  <div class="col-md">
                    <div class="form-floating mt-3">
                      <input
                        type="time"
                        class="form-control"
                        id="floatingTimeFin"
                        placeholder="Horario de fin"
                        name="horario_fin_lunes"
                      />
                      <label for="floatingTimeFin">Final</label>
                    </div>
                  </div>
                </div>
              </div>
              <div class="form-check mt-2">
                {{#with edit}} {{#each clase}} {{#if miercoles}}
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="Miercoles"
                  name="miercoles"
                  id="flexCheckDefault2"
                  checked
                />
                {{else}}
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="Miercoles"
                  name="miercoles"
                  id="flexCheckDefault2"
                />
                {{/if}} {{/each}} {{/with}}
                <label class="form-check-label" for="flexCheckDefault2">
                  Miercoles
                </label>
                <div class="form-floating mt-3">
                  <select
                    class="form-select text-center"
                    id="floatingSelectGrid3"
                    name="salon_miercoles"
                  >
                    <option selected disabled>Selecciona el salón</option>
                    {{#each salones}}
                    <option value="{{salon}}">{{salon}}</option>
                    {{/each}}
                  </select>
                  <label for="floatingSelectGrid3">Salón</label>
                </div>
                <div class="row">
                  <div class="col-md">
                    <div class="form-floating mt-3">
                      <input
                        type="time"
                        class="form-control"
                        id="floatingTime"
                        placeholder="Horario de inicio"
                        name="horario_inicio_miercoles"
                      />
                      <label for="floatingTime">Inicio</label>
                    </div>
                  </div>
                  <div class="col-md">
                    <div class="form-floating mt-3">
                      <input
                        type="time"
                        class="form-control"
                        id="floatingTimeFin"
                        placeholder="Horario de fin"
                        name="horario_fin_miercoles"
                      />
                      <label for="floatingTimeFin">Final</label>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md">
              <div class="form-check mt-2">
                {{#with edit}} {{#each clase}} {{#if martes}}
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="Martes"
                  name="martes"
                  id="flexCheckDefault1"
                  checked
                />
                {{else}}
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="Martes"
                  name="martes"
                  id="flexCheckDefault1"
                />
                {{/if}} {{/each}} {{/with}}
                <label class="form-check-label" for="flexCheckDefault1">
                  Martes
                </label>
                <div class="form-floating mt-3">
                  <select
                    class="form-select text-center"
                    id="floatingSelectGrid3"
                    name="salon_martes"
                  >
                    <option selected disabled>Selecciona el salón</option>
                    {{#each salones}}
                    <option value="{{salon}}">{{salon}}</option>
                    {{/each}}
                  </select>
                  <label for="floatingSelectGrid3">Salón</label>
                </div>
                <div class="row">
                  <div class="col-md">
                    <div class="form-floating mt-3">
                      <input
                        type="time"
                        class="form-control"
                        id="floatingTime"
                        placeholder="Horario de inicio"
                        name="horario_inicio_martes"
                      />
                      <label for="floatingTime">Inicio</label>
                    </div>
                  </div>
                  <div class="col-md">
                    <div class="form-floating mt-3">
                      <input
                        type="time"
                        class="form-control"
                        id="floatingTimeFin"
                        placeholder="Horario de fin"
                        name="horario_fin_martes"
                      />
                      <label for="floatingTimeFin">Final</label>
                    </div>
                  </div>
                </div>
              </div>
              <div class="form-check mt-2">
                {{#with edit}} {{#each clase}} {{#if jueves}}
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="Jueves"
                  name="jueves"
                  id="flexCheckDefault3"
                  checked
                />
                {{else}}
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="Jueves"
                  name="jueves"
                  id="flexCheckDefault3"
                />
                {{/if}} {{/each}} {{/with}}
                <label class="form-check-label" for="flexCheckDefault3">
                  Jueves
                </label>
                <div class="form-floating mt-3">
                  <select
                    class="form-select text-center"
                    id="floatingSelectGrid3"
                    name="salon_jueves"
                  >
                    <option selected disabled>Selecciona el salón</option>
                    {{#each salones}}
                    <option value="{{salon}}">{{salon}}</option>
                    {{/each}}
                  </select>
                  <label for="floatingSelectGrid3">Salón</label>
                </div>
                <div class="row">
                  <div class="col-md">
                    <div class="form-floating mt-3">
                      <input
                        type="time"
                        class="form-control"
                        id="floatingTime"
                        placeholder="Horario de inicio"
                        name="horario_inicio_jueves"
                      />
                      <label for="floatingTime">Inicio</label>
                    </div>
                  </div>
                  <div class="col-md">
                    <div class="form-floating mt-3">
                      <input
                        type="time"
                        class="form-control"
                        id="floatingTimeFin"
                        placeholder="Horario de fin"
                        name="horario_fin_jueves"
                      />
                      <label for="floatingTimeFin">Final</label>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="form-check mt-2">
            {{#with edit}} {{#each clase}} {{#if viernes}}
            <input
              class="form-check-input"
              type="checkbox"
              value="Viernes"
              name="viernes"
              id="flexCheckDefault4"
              checked
            />
            {{else}}
            <input
              class="form-check-input"
              type="checkbox"
              value="Viernes"
              name="viernes"
              id="flexCheckDefault4"
            />
            {{/if}} {{/each}} {{/with}}
            <label class="form-check-label" for="flexCheckDefault4">
              Viernes
            </label>
            <div class="form-floating mt-3">
              <select
                class="form-select text-center"
                id="floatingSelectGrid3"
                name="salon_viernes"
              >
                <option selected disabled>Selecciona el salón</option>
                {{#each salones}}
                <option value="{{salon}}">{{salon}}</option>
                {{/each}}
              </select>
              <label for="floatingSelectGrid3">Salón</label>
            </div>
            <div class="row">
              <div class="col-md">
                <div class="form-floating mt-3">
                  <input
                    type="time"
                    class="form-control"
                    id="floatingTime"
                    placeholder="Horario de inicio"
                    name="horario_inicio_viernes"
                  />
                  <label for="floatingTime">Inicio</label>
                </div>
              </div>
              <div class="col-md">
                <div class="form-floating mt-3">
                  <input
                    type="time"
                    class="form-control"
                    id="floatingTimeFin"
                    placeholder="Horario de fin"
                    name="horario_fin_viernes"
                  />
                  <label for="floatingTimeFin">Final</label>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="form-group">
          <button class="btn btn-success w-25 mt-3" type="submit">
            Guardar
          </button>
          <a href="/dashboard" class="btn btn-primary mt-3 g-2 me-3">Volver</a>
        </div>
      </form>
    </div>
  </div>
</div>
