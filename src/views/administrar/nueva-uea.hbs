<div class="container text-center">
  <div class="card mx-auto mt-4" style="width: 42rem;">
    <div class="card-body">
      <h5 class="card-title text-center">Nueva UEA</h5>
      <br />
      <img
          src="/pictures/sigeca_full.png"
          class="img-fluid mt-3 mb-3"
          alt="SIGECA"
          width="440"
          height="240"
        />
      <form
        action="/uea/nueva-uea"
        method="POST"
      >
        <div class="form-group">
          <input
            type="text"
            name="uea"
            class="form-control"
            placeholder="UEA"
            id="UEA"
            value=""
            autofocus
          />
        </div>
        <div class="form-group mt-3">
          <textarea
            name="descripcion"
            class="form-control"
            placeholder="Descripción (Opcional)"
          ></textarea>
        </div>
        <div class="form-group mt-3">
          <input
            type="text"
            name="clave"
            class="form-control"
            placeholder="Clave"
          />
        </div>
        <!--div class="form-floating mt-3">
          <select
            class="form-select text-center"
            id="floatingSelectGrid"
            name="division"
          >
            <option selected disabled>Selecciona</option>
            {{#each division}}
              <option value="{{name}}">{{name}}</option>
            {{/each}}
          </select>
          <label for="floatingSelectGrid">División</label>
        </div-->
        <div class="btn-group mt-3">
          <input type="radio" class="btn-check" name="tronco" id="Tronco Basico de Carrera" value="Tronco Basico de Carrera" autocomplete="off" checked>
          <label class="btn btn-outline-uam" for="Tronco Basico de Carrera">Tronco Basico de Carrera</label>

          <input type="radio" class="btn-check" name="tronco" id="Tronco General Divisional" value="Tronco General Divisional" autocomplete="off">
          <label class="btn btn-outline-uam" for="Tronco General Divisional">Tronco General Divisional</label>

          <input type="radio" class="btn-check" name="tronco" id="Tronco Específico de Carrera" value="Tronco Específico de Carrera" autocomplete="off">
          <label class="btn btn-outline-uam" for="Tronco Específico de Carrera">Tronco Específico de Carrera</label>

          <input type="radio" class="btn-check" name="tronco" id="Tronco Interdivisional de Formación Interdisciplanaria" value="Tronco Interdivisional de Formación Interdisciplanaria" autocomplete="off">
          <label class="btn btn-outline-uam" for="Tronco Interdivisional de Formación Interdisciplanaria">Tronco Interdivisional de Formación Interdisciplanaria</label>
          <input type="radio" class="btn-check" name="tronco" id="Tronco de Integración" value="Tronco de Integración" autocomplete="off">
          <label class="btn btn-outline-uam" for="Tronco de Integración">Tronco de Integración</label>
          <input type="radio" class="btn-check" name="tronco" id="Optativa Divisional" value="Optativa Divisional" autocomplete="off">
          <label class="btn btn-outline-uam" for="Optativa Divisional">Optativa Divisional</label>
        </div>
        <div class="form-group">
          <button class="btn btn-success w-100 mt-3" type="submit">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>