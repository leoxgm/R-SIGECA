<div class="container text-center">
  <div class="card mx-auto mt-4" style="width: 42rem;">
    <div class="card-body">
      <h5 class="card-title text-center">Editar Salón</h5>
      <br />
      <img
          src="/pictures/sigeca_full.png"
          class="img-fluid mt-3 mb-3"
          alt="SIGECA"
          width="440"
          height="240"
        />
      <form action="/salones/salonedit/{{edit._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT" />
        <div class="form-group">
          <input
            type="text"
            name="salon"
            class="form-control"
            placeholder="Salón"
            id="salon"
            value={{edit.salon}}
            autofocus
          />
        </div>
        <div class="form-group mt-3">
          <input
            type="number"
            name="cupo"
            class="form-control"
            placeholder="Cupo"
            id="cupo"
            value={{edit.cupo}}
            min="1"
            max="100"
          />
        </div>
        <div class="form-group mt-3">
          <input
            type="text"
            name="responsable"
            class="form-control"
            placeholder="Responsable"
            value="{{edit.responsable}}"
          />
        </div>
        <div class="form-group">
          <button class="btn btn-success w-50 mt-3" type="submit">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>