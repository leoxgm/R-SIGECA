<div class="container text-center">
  <div class="card mx-auto mt-4" style="width: 42rem;">
    <div class="card-body">
      <h5 class="card-title text-center">Nuevo Horario</h5>
      <br />
      <img
          src="/pictures/sigeca_full.png"
          class="img-fluid mt-3 mb-3"
          alt="SIGECA"
          width="440"
          height="240"
        />
      <form
        action="/new-horario"
        method="POST"
      >
        <div class="form-floating mt-3">
          <select
            class="form-select text-center"
            id="floatingSelectGridTrim"
            name="trimestre"
          >
            <option selected disabled>Selecciona</option>
            {{#each trimestres}}
              <option value="{{this}}">{{this}}</option>
            {{/each}}
          </select>
          <label for="floatingSelectGridTrim">Trimestre</label>
        </div>
        <div class="form-floating mt-3">
          <select
            class="form-select text-center"
            id="floatingSelectGrid"
            name="division"
          >
            <option selected disabled>Selecciona</option>
            {{#each division}}
              <option value="{{name}}">{{name}}</option>
            {{/each}}
          </select>
          <label for="floatingSelectGrid">Divisi√≥n</label>
        </div>
        <div class="form-group">
          <button class="btn btn-success w-50 mt-3 mx-auto" type="submit">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>