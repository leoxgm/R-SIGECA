<div class="container text-center mb-3">
  <div class="card mx-auto mt-4" style="width: 62rem;">
    <div class="card-body">
      {{#if directores}}
      <img
          src="/pictures/sigeca_full.png"
          class="img-fluid mt-3 mb-3"
          alt="SIGECA"
          width="440"
          height="240"
        />
      <table class="table table-striped table-hover table-bordered">
        <thead>
          <tr>
            <th scope="col">
              Director
            </th>
            <th scope="col">
              Divisi√≥n
            </th>
            <th scope="col">Opciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each directores}}
            <tr>
              <th>{{director}}</th>
              <td>{{division}}</td>
              <td>
                <a href="/dashboard/director-edit/{{_id}}"class="btn btn-primary"><i
                    class="fa-solid fa-pen-to-square"
                  ></i>Editar</a>
                <form
                  action="/dashboard/delete-director/{{_id}}?_method=DELETE"
                  method="POST"
                >
                  <input type="hidden" name="_method" value="DELETE" />
                  <button class="btn btn-danger mt-3" type="submit">
                    <i class="fa-solid fa-trash"></i>
                    Eliminar
                  </button>
                </form>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
      {{else}}
      <h3>No existen directores registrados</h3>
        <img
          src="/pictures/error.png"
          class="img-fluid mt-3 mb-3"
          alt="ERROR"
          width="440"
          height="240"
        />
      {{/if}}
    </div>
  </div>
</div>