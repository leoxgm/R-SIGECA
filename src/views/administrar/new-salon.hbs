<div class="container text-center">
  <div class="card mx-auto mt-4" style="width: 42rem;">
    <div class="card-body">
      <h5 class="card-title text-center">Nuevo Salón</h5>
      <br />
      <img
          src="/pictures/sigeca_full.png"
          class="img-fluid mt-3 mb-3"
          alt="SIGECA"
          width="440"
          height="240"
        />
      <form action="/salones/new-salon" method="POST">
        <div class="form-group">
          <input
            type="text"
            name="salon"
            class="form-control"
            placeholder="Salón"
            id="salon"
            value=""
            autofocus
          />
        </div>
        <div class="form-group mt-3">
          <input
            type="number"
            name="cupo"
            class="form-control"
            placeholder="Cupo"
            id="cupo"
            value="1"
            min="1"
            max="100"
          />
        </div>
        <div class="form-group mt-3">
          <input
            type="text"
            name="responsable"
            class="form-control"
            placeholder="Responsable"
          />
        </div>
        <div class="form-group">
          <button class="btn btn-success w-25 mt-3 mx-auto" type="submit">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>