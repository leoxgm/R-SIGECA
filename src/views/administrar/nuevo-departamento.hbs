<div class="container text-center">
  <div class="card mx-auto mt-4" style="width: 42rem;">
    <div class="card-body">
      <h5 class="card-title text-center">Nuevo Departamento</h5>
      <br />
      <img
          src="/pictures/sigeca_full.png"
          class="img-fluid mt-3 mb-3"
          alt="SIGECA"
          width="440"
          height="240"
        />
      <form action="/users/signup/departamento" method="POST">
        <div class="row g-2 mt-3">
          <div class="col-7">
            <div class="form-floating">
              <input
                type="text"
                class="form-control border-primary"
                id="floatingInputGrid"
                placeholder="Nombre"
                name="departamento"
                value=""
              />
              <label for="floatingInputGrid">Departamento</label>
            </div>
          </div>
          <div class="col-5">
            <div class="form-floating">
              <select
                class="form-select border-primary text-center"
                id="floatingSelectGrid"
                name="division"
              >
                <option selected disabled>Selecciona</option>
                {{#each divisiones}}
                  <option value="{{name}}">{{name}}</option>
                {{/each}}
              </select>
              <label for="floatingSelectGrid">División</label>
            </div>
          </div>
        </div>
        <div class="form-floating mt-3">
          <input
            type="password"
            class="form-control border-primary"
            id="floatingPassword"
            placeholder="Password"
            name="password"
          />
          <label for="floatingPassword">Contraseña</label>
        </div>
        <div class="form-floating mt-3">
          <input
            type="password"
            class="form-control border-primary"
            id="floatingConfirmPassword"
            placeholder="confirm_Password"
            name="confirm_password"
          />
          <label for="floatingConfirmPassword">Confirmar contraseña</label>
        </div>
        <div class="mt-3 mb-3">
          <button type="submit" class="btn btn-primary w-100">
            Registro
          </button>
        </div>
      </form>
    </div>
  </div>
</div>