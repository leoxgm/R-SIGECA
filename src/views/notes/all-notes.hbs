<div class="row">
    {{#each notes}}
        <div class="col-md-3">
             <div class="card mt-4">
                 <div class="card-body">
                     <h4 class="card-title d-flex justify-content-between align-items-center">
                         {{title}} <a href="/notes/edit/{{_id}}"><i class="fa-solid fa-pen-to-square"></i></a>
                     </h4>
                     <p>{{description}}</p>
                     <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger w-100 btn-sm" type="submit">
                            Borrar
                        </button>
                     </form>
                 </div>
             </div>
        </div>
    {{else}}
        <div class="card mx-auto">
            <div class="card-body">
                <h1>Hello, {{user.name}}</h1>
                <p class="lead mx-auto">No hay notas</p>
                <a href="/notes/add" class="btn btn-success w-100">Crear una nota.</a>
            </div>
        </div>
    {{/each}}
</div>